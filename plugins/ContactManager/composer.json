{
    "name": "your-name-here/contact-manager",
    "description": "ContactManager plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "ContactManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ContactManager\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "ContactManager\\Test\\Fixture": "tests/Fixture/"
        }
    }
}
